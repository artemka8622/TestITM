@model TestITM.Models.ReportViewModel

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Отчет по коммутаторам №2</h2>
<p>
    <div>
        @using (Ajax.BeginForm(new AjaxOptions { UpdateTargetId = "thetable" }))
        {
            @Html.TextBox("Начало", $"{Model.SearchViewModel.From:d}", new { @class = "datefield", type = "datetime" })
            @Html.TextBox("Окончание", $"{Model.SearchViewModel.To:d}", new { @class = "datefield", type = "datetime" })
            <input type="submit" name="Выполнить" value="Выполнить" />
        }
    </div>
</p>
