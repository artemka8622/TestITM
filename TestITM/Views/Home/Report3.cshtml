@using TestITM.Helper
@model TestITM.Models.ReportViewModel

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Отчет по коммутаторам №3</h2>

<p>
    <div>
        @using (Ajax.BeginForm(new AjaxOptions { UpdateTargetId = "thetable" }))
        {
            @Html.TextBox("Начало", $"{Model.SearchViewModel.From:d}",new { @class = "datefield", type = "datetime" })
            @Html.TextBox("Окончание", $"{Model.SearchViewModel.To:d}", new { @class = "datefield", type = "datetime" })
            <input type="submit" name="name" value="Выполнить" />
        }
    </div>
</p>

<h5>Cписок всех коммутаторов в состоянии UP</h5>
<div>
@{
    foreach (var d in Model.StausViewModels)
    {
        <div class="grid-5-12 left clear">
            @Html.LabelFor(t => d.SwitchName)
            @Html.LabelFor(t => d.DateTime.ToString())
            @Html.LabelFor(t => d.ActionSwitch.GetDescription())
        </div>
    }
}
</div>
<h5>Cписок всех коммутаторов в состоянии DOWN</h5>
<div>
    @{
        foreach (var d in Model.StausViewModels)
        {
            <div class="grid-5-12 left clear">
                @Html.LabelFor(t => d.SwitchName)
                @Html.LabelFor(t => d.DateTime.ToString())
                @Html.LabelFor(t => d.ActionSwitch.GetDescription())
            </div>
        }
    }
</div>